{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "C:/MinGW/bin/g++.exe"
            },
            "linux": {
                "options": {
                    "cwd": "/usr/bin"
                }
            }
        }
    ],
    "version": "2.0.0"
}